@page
@model PublicTalkSchedule.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<!-- ****************************** Details - Outgoing Talks Banner************************************** -->
<h2 class="text-info">Details - Outgoing Talk Assignements</h2>
<br />

<!-- ******************************************************************** -->
<!-- banner and Detail Outgoing Talk -->
<form method="post">
    <!-- hidden column that is not updated. ID column is usually included here-->
    <!-- <input asp-for="Congregation.Id" hidden /> NOT HIDDEN FOR NOW -->

    <div class="border backgroundwhite">
        <!-- hidden column that is not updated. ID column is usually included here-->
        <!-- <input type="hidden" asp-for="Congregation.Id" />  -->
        <!-- dot, mtg date and mtg time fields -->
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                @Html.LabelFor(m => m.ScheduleOut, "Date:")
                <input asp-for="ScheduleOut.DOT" disabled class="form-control" style="width:165px" />
            </div>
            &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;

            <div class="col-2">
                <label asp-for="ScheduleOut.Congregation.MtgDay"></label>
                <input asp-for="ScheduleOut.Congregation.MtgDay" disabled class="form-control" style="width:125px" />
            </div>

            <div class="col-3">
                <label asp-for="ScheduleOut.Congregation.MtgTime"></label>
                <input asp-for="ScheduleOut.Congregation.MtgTime" disabled class="form-control" style="width:125px" />
            </div>
            @*<div class="col-2">
            <input asp-for="ScheduleOut.Congregation.MtgTime" disabled class="form-control" />
        </div>*@

        </div>

        <!-- speaker name fields -->
        <div class="form-group row">
            <div class="col-2">
                @Html.LabelFor(m => m.ScheduleOut, "Speaker:")
            </div>
            <div class="col-5">
                <input asp-for="ScheduleOut.Speaker.FullName" disabled class="form-control" />
            </div>
        </div>

        <!-- talk number fields -->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ScheduleOut.SpkTalkNum"></label>
            </div>
            <div class="col-2">
                <input asp-for="ScheduleOut.SpkTalkNum" disabled class="form-control" />
            </div>
            <div class="col-5">
                <input asp-for="ScheduleOut.TalkList.Title" disabled class="form-control" />
            </div>
        </div>

        <!-- host congregation fields -->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ScheduleOut.hostCongNum"></label>
            </div>
            <div class="col-5">
                <input asp-for="ScheduleOut.Congregation.CongName" disabled class="form-control" />
            </div>
        </div>

        <!-- add buttons-->
        <div class="form-group row">
            <div class="col-5 offset-3">
                <partial name="_DetailsEditSchedOutAndBackToListButton" />
            </div>
        </div>

    </div>
</form>