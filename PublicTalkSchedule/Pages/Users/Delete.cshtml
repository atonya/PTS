@page
@model PublicTalkSchedule.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete User</h2>
<h6 class="text-danger">******* Delete cannot be undone *******</h6>

<br />

<!-- ******************************************************************** -->
<!-- banner and Delete Users -->
<form method="post">
    <!-- hidden column that is not updated. ID column is usually included here-->
    <input asp-for="ApplicationUser.Id" hidden />
    <input asp-for="ApplicationUser.Name" hidden />
    <div class=" border  backgroundWhite">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="ApplicationUser.Name" class="text-info"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="ApplicationUser.Name" disabled class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="ApplicationUser.Email" class="text-info"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="ApplicationUser.Email" disabled class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="ApplicationUser.SpkNum" class="text-info"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="ApplicationUser.SpkNum" disabled class="form-control" />
                </div>
            </div>
        </div>

        <!-- add buttons-->
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" />
            </div>
        </div>

    </div>
</form>