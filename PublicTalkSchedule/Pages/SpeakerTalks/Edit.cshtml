@page
@model PublicTalkSchedule.Pages.SpeakerTalks.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!-- ****************************** Edit Speaker's Talk List Banner ****************************** -->
<br />
<h3 class="text-info">Edit a Speaker's Talk List</h3>
<br />

<!-- build form that allows editing of speaker's talks list -->
<form method="post">
    <div class="border backgroundwhite">
        <!-- hidden column that is not updated. ID column is usually included here-->
        <input type="hidden" asp-for="SpeakerTalk.Id" />
        <input type="hidden" asp-for="SpeakerTalk.SpkNum" />

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SpeakerTalk.SpkNum"></label>
            </div>
            <div class="col-2">
                <input asp-for="SpeakerTalk.SpkNum" disabled class="form-control" />
            </div>
            @*<span asp-validation-for="SpeakerTalk.Title" class="text-danger"></span>*@
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SpeakerTalk.TalkNum"></label>
            </div>
        
        <div class="col-2">
            <select asp-for="SpeakerTalk.TalkNum" class="form-control" asp-items="ViewBag.Id">
                <option value="">Select Talk #</option>
            </select>
        </div>
        <span asp-validation-for="SpeakerTalk.TalkNum" class="text-danger"></span>
    </div>

        <div class="form-group row">
            <div class="col-2">
                    <label asp-for="SpeakerTalk.Title"></label>
            </div>
            <div class="col-5">
                    <input asp-for="SpeakerTalk.Title" disabled class="form-control" />
            </div>
                @*<span asp-validation-for="SpeakerTalk.Title" class="text-danger"></span>*@
        </div>


        <!-- add buttons-->
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <input type="submit" asp-route-tansId="@Model.SpeakerTalk.Id" class="btn btn-info form-control" value="Update" />
            </div>
            <div class="col-2">
                <a asp-page="Index" asp-route-spkId="@Model.SpeakerTalk.SpkNum" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>


    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

