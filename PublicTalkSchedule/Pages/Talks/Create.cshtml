@page
@model PublicTalkSchedule.Pages.Talks.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<!-- *************** code used to display success message *************** -->
@if (Model.Message != null)
{
    <div class="alert alert alert-dismissible text-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aira-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}

<!-- ****************************** Create Congregation Banner ****************************** -->
<br />
<h3 class="text-info">Add a Talk</h3>
<br />

<!-- build form that allows creating new record-->
<!-- display lables-->
<form method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="border backgroundwhite">
        <div class="form-group row">
            <!-- Id (aka TalkNum) field -->
            <div class="col-2">
                <label asp-for="TalkList.Id"></label>
            </div>
            <div class="col-5">
                <input asp-for="TalkList.Id" class="form-control" />
            </div>
            <span asp-validation-for="TalkList.Id" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <!-- Title field -->
            <div class="col-2">
                <label asp-for="TalkList.Title"></label>
            </div>
            <div class="col-5">
                <input asp-for="TalkList.Title" class="form-control" />
            </div>
            <span asp-validation-for="TalkList.Title" class="text-danger"></span>
        </div>
        @*<div class="form-group row">
             CatNum field
            <div class="col-2">
                <label asp-for="TalkList.CatNum"></label>
            </div>
            <div class="col-5">
                <input asp-for="TalkList.CatNum" class="form-control" />
            </div>
            <span asp-validation-for="TalkList.Title" class="text-danger"></span>  VALIDATION NOT REQUIRED
        </div>*@


        <div class="form-group row">
            <!-- TalkCategory Id and Category Description (aka Id and CatDes) fields -->
            <div class="col-2">
                <label asp-for="TalkList.CatDescription"></label>
            </div>
            <div class="col-5">
                <select asp-for="SelectedCatId" asp-items="@Model.CatItems"  class="form-control">
                    <option value="">Required Field</option>
                </select>
            </div>
            <span asp-validation-for="SelectedCatId" class="text-danger"></span>

        </div>





        <!-- add buttons-->
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>

    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

